---
import Icon from "astro-icon";
---

<div class="container">
    <div class="contact-title">
        <Icon name="carbon:email" />
        <h3>Contact Me</h3>
    </div>
    <p>
        Write me a message but be sure to check out the portfolio first! If you
        have a question I'll get back to you as soon as I can!
    </p>
    <form class="contact-me">
        <input
            class="your-name"
            name="your-name"
            type="text"
            placeholder="Your Name"
        />
        <textarea
            class="your-message"
            name="your-message"
            placeholder="Your Message"></textarea>
        <input type="button" class="send" value="Send" />
    </form>
</div>

<style>
    .container {
        display: flex;
        flex-direction: column;
        align-items: center;
        margin: 0 auto;
        padding: 2rem;
        width: 60%;
        border: 1px solid rgba(255, 255, 255, 0.2);
        border-radius: 5px;
    }

    @media (max-width: 600px) {
        .container {
            display: flex;
            flex-direction: column;
            align-items: center;
            margin: 0 auto;
            padding: 2rem;
            width: 85%;
            border: 1px solid rgba(255, 255, 255, 0.2);
            border-radius: 5px;
        }
    }

    .contact-title {
        display: flex;
        width: 100%;
    }

    h3 {
    }

    p {
        padding: 0.5rem 1rem;
    }

    .contact-me {
        display: flex;
        flex-direction: column;
        width: 100%;
    }

    .your-name {
        margin: 1rem 0 0.5rem 0;
        padding: 0.5rem 0.8rem;
        border: 1px solid rgba(255, 255, 255, 0.2);
        border-radius: 5px;
        background: transparent;
        color: white;
    }

    .send {
        margin: 1rem 0 0.5rem 0;
        padding: 0.8rem;
        border: none;
        border-radius: 5px;
        background: #181818;
        color: white;
        font-size: 1rem;
        font-weight: bold;
        letter-spacing: 0.15ch;
        cursor: pointer;
        transition: background 800ms ease, transform 300ms ease;
    }

    .send:hover {
        transform: scale(1.03);
        background: #00464a;
    }

    @media (hover: none) {
        .send {
            transition: background 800ms ease, transform 300ms ease;
        } 
    }

    textarea {
        margin: 1rem 0 0.5rem 0;
        padding: 0.5rem 0.8rem;
        border: 1px solid rgba(255, 255, 255, 0.2);
        border-radius: 5px;
        max-width: 100%;
        height: 15ch;
        background: transparent;
        color: white;
    }

    [astro-icon] {
        height: 30px;
        width: auto;
        color: #448a8e;
        transition: transform 200ms ease, color 400ms linear;
        padding: 0 0.5rem;
    }
</style>
