---
export interface Props {
    title: string;
    body: string;
    src: string;
    href: string;
}

const { src, title, body, href } = Astro.props;
---

<div class="link-card">
    <h2>
        {title}
    </h2>
    <p>
        {body}
    </p>
    <iframe
        loading="lazy"
        src={href}
        title="YouTube video player"
        frameborder="0"
        allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture; web-share"
        allowfullscreen></iframe>
</div>

<style>
    .link-card {
        display: flex;
        flex-direction: column;
        padding: 2rem;
        margin: 0.5rem 0;
        background: rgba(50, 50, 50, 0.25);
        border-radius: 7px;
        width: 100%;
    }

    h2 {
        margin: 0;
    }
    p {
        margin: 0.5rem 0 1rem 0;
    }
    iframe {
        margin: 0 auto;
    }
    @media (min-width: 1100px) {
        iframe {
            width: 500px;
            height: 255px;
        }
    }
</style>
