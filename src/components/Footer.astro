<style>
    .container {
        margin: 4rem 4rem;
        display: flex;
        border-top: 1px solid rgba(255, 255, 255, 0.2);
        flex-wrap: wrap;
    }
    .navigation {
        flex: 1;
    }

    .information {
        flex: 1;
        display: flex;
        flex-direction: column;
        text-align: right;
    }

    .menu-wrapper {
        display: flex;
        min-width: 400px;
    }

    ul {
        display: flex;
        list-style: none;
    }

    button {
        margin: 0.5rem 1rem;
        padding: 0.25em 0.5em;
        background: transparent;
        border: none;
        color: #bdcad9;
        cursor: pointer;
        font-size: 1rem;
        font-weight: bold;
    }

    button:hover {
        background-image: var(--accent-gradient);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-size: 100%;
        background-position: 0%;
    }

    p {
        padding: 0.5rem;
    }

    .social-media {
        padding: 0.5rem 0;
    }

    [astro-icon] {
        height: 30px;
        width: auto;
        color: #448a8e;
        transition: transform 200ms ease, color 400ms linear;
        padding: 0;
    }

    [astro-icon]:hover {
        color: #d134b7;
        transform: scale(1.3);
    }

    a {
        margin: 10px;
        padding: 0;
    }

    a:visited {
        color: #0b0d23;
    }

    @media (max-width: 600px) {
        .container {
            margin: 4rem 4rem;
            display: flex;
            flex-direction: column;
            border-top: 1px solid rgba(255, 255, 255, 0.2);
        }

        .navigation {
            flex: 1;
        }

        .menu-wrapper {
            justify-content: center;
        }

        .information {
            align-items: center;
            flex: 1;
            display: flex;
            flex-direction: column;
            text-align: right;
        }
    }
</style>
